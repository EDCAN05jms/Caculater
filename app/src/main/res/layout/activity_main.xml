<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.setsn.caculater.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="7"
                android:layout_weight="1"
            />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="8"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="9"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="<-"
                android:layout_weight="1"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="4"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="5"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="6"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="/"
                android:layout_weight="1"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="1"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="2"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="3"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="-"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="CE"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="0"
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="="
                android:layout_weight="1"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="70dp"
                android:text="+"
                android:layout_weight="1"
                />



        </LinearLayout>




    </LinearLayout>






</LinearLayout>
